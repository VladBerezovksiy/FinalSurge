pipeline {

    agent any

    tools {
        maven "Maven"
    }

    stages {

        stage ('Pull Libraries') {

            steps {
                catchError {
                    script {
                        docker.image('maven:3.8.5-jdk-11-slim')
                    }
                }
            }

            steps {
                catchError {
                    script {
                        docker.image('selenium/standalone-chrome:latest')
                    }
                }
            }
        }

        stage ('Run Tests') {
            steps {
                git branch: '$BRANCH', url: 'https://github.com/VladBerezovksiy/FinalSurge.git'

                sh "mvn clean test -Dmaven.test.failure.ignore=true -Dmaven.compiler.source=11 -Dmaven.compiler.target=11"
            }

            post {
                success {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }

        stage ('Reports') {
            script {
                allure([
                        includeProperties: false,
                        jdk: '',
                        properties: [],
                        reportBuildPolicy: 'ALWAYS',
                        results: [[path: 'target/allure-results']]
                ])
            }
        }
    }
}