<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="ForceSurge" parallel="tests" thread-count="4">

    <!--Надо разделить по группам, дописать тесты с 'negative' папки,
     увеличить потоки, и то чо по требования в Дипломе-->


    <test name="AddWorkoutTest">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="finalsurge.tests.positive.AddWorkoutTest"/>
        </classes>
    </test>
    <test name="ReportTest">
        <groups>
            <run>
                <include name="smoke"/>
                <exclude name="negative"/>

            </run>
        </groups>

        <classes>
            <class name="finalsurge.tests.positive.ReportTest"/>
        </classes>
    </test>
    <test name="ReportTest1">
        <groups>
            <run>
                <include name="negative"/>
                <exclude name="smoke"/>
            </run>
        </groups>

        <classes>
            <class name="finalsurge.tests.positive.ReportTest"/>
        </classes>
    </test>
    <!--<test name="RegistrationTest">
        <classes>
            <class name="finalsurge.tests.negative.Regis"/>
        </classes>
    </test>-->
    <test name="SignUpTest">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="finalsurge.tests.positive.SignUpTest"/>
        </classes>
    </test>

</suite>